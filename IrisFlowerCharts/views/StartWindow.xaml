<Window x:Class="IrisFlowerCharts.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IrisFlowerCharts.Views"
        xmlns:vm="clr-namespace:IrisFlowerCharts.ViewModels"
        mc:Ignorable="d"
        Title="Iris Flower Charts" 
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.DataContext>
        <vm:Main></vm:Main>
    </Window.DataContext>

    <Grid Style="{StaticResource MainContainer}">
        <Grid Style="{StaticResource ContentContainer}" Margin="10">
            <Grid Grid.Row="0">
                
            </Grid>
            <Grid Grid.Row="1">
                <Label Style="{StaticResource TitleLabel}"
                       HorizontalAlignment="Center">Iris Flower Charts</Label>
                <Button Style="{StaticResource BaseButton}" 
                        Command="{Binding LoadStatsCommand}">Choose file</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
