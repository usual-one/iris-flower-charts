<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IrisFlowerCharts.views.styles">

    <Style x:Key="MainContainer" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource DimBackgroundBrush}" />
    </Style>

    <Style x:Key="ContentContainerBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Background" Value="{StaticResource BrightBackgroundBrush}" />

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
                    BlurRadius="4" 
                    Direction="315" 
                    Color="{StaticResource GreyTextColor}" 
                    Opacity="0.05"
                    ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>
        
</ResourceDictionary>